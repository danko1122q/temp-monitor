# Maintainer: Danko <davaniko1122@gmail.com>
# Temp Monitor - Real-time hardware temperature monitoring for Linux

pkgname=temp
pkgver=0.0.2
pkgrel=1
pkgdesc="Real-time hardware temperature monitor for Linux"
arch=('x86_64' 'i686' 'aarch64')
url="https://github.com/danko1122/temp-monitor"
license=('MIT')
depends=('glibc')
makedepends=('gcc' 'make')
source=("$pkgname-$pkgver.tar.gz::https://github.com/danko1122/temp-monitor/archive/refs/tags/v$pkgver.tar.gz")
sha256sums=('SKIP')

build() {
    cd "temp-monitor-$pkgver"
    make
}

package() {
    cd "temp-monitor-$pkgver"
    install -Dm755 bin/temp "$pkgdir/usr/bin/temp"
    install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
    install -Dm644 README.md "$pkgdir/usr/share/doc/$pkgname/README.md"
    install -Dm644 USAGE.md "$pkgdir/usr/share/doc/$pkgname/USAGE.md"
    install -Dm644 CHANGELOG.md "$pkgdir/usr/share/doc/$pkgname/CHANGELOG.md"
}
